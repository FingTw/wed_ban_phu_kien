@{
}
@using WebBanPhuKienDienThoai.Extensions
@using WebBanPhuKienDienThoai.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee - @ViewData["Title"] - Phu Kien Smart Phone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background-color: #0d6efd;
            color: white;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: white;
                padding: 12px 20px;
                font-weight: 500;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #0056b3;
                    color: #fff;
                }

        .header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 15px 20px;
        }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar col-md-3 col-lg-2 d-md-block">
            <div class="p-3 text-center">
                <a class="navbar-brand text-white" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <img src="~/images/images.png" alt="Logo" class="img-fluid" style="max-height: 40px;">
                    <div class="mt-2">Employee Panel</div>
                </a>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="CategoryA" asp-action="Index">
                        <i class="bi bi-tags-fill me-2"></i> Category
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="DeviceTypeA" asp-action="Index">
                        <i class="bi bi-phone-fill me-2"></i> Device Type
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="ProductA" asp-action="Index">
                        <i class="bi bi-box-seam me-2"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                        <i class="bi bi-basket-fill me-2"></i> Orders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="DiscountCode" asp-action="Index">
                        <i class="bi bi-percent me-2"></i> Discount Codes
                    </a>
                </li>
            </ul>
            <div class="p-3 mt-4">
                <partial name="_LoginPartial" />
            </div>
        </nav>

        <!-- Main content -->
        <div class="content col-md-9 col-lg-10">
            <header class="header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Welcome, Employee</h5>
                <div class ="btn btn-outline-primary">
                    
                    <form id="logoutForm" class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                    </form>
                </div>
            </header>
            <main role="main" class="py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
