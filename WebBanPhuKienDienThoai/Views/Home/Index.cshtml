<section id="mobile-products" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Mobile Products</h2>
            <a href="shop.html" class="btn btn-outline-dark">Go to Shop</a>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("Display", "Product", new { id = item.Id })">@item.Name</a>
                            </h5>
                            <p class="card-text">@item.Price.ToString("#,##0") VND</p>
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new { productID = item.Id })"
                               class="btn btn-dark">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

