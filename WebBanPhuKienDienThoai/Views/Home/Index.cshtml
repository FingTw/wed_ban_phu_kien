<script>
    function addToCart(productId, quantity) {
        $.ajax({
            url: '@Url.Action("AddToCart", "ShoppingCart")',
            type: 'POST',
            data: { productId: productId, quantity: quantity },
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                }
            },
            error: function () {
                alert("@Localizer["An error occurred!"]");
            }
        });
    }
</script>
