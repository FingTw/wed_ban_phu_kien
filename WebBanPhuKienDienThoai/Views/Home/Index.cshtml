@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["title"] = Localizer["Home Page"];
    int numOfQuantity = 1;
}

<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 banner-container">
                <img src="~/images/banner.jpg" alt="banner" class="banner-image">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold">@Localizer["Products"]</h1>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-dark mt-3">@Localizer["Shop Product"]</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Free Delivery"]</h5>
                        <p class="card-text">@Localizer["Consectetur adipi elit lorem ipsum dolor sit amet."]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Quality Guarantee"]</h5>
                        <p class="card-text">@Localizer["Dolor sit amet orem ipsu mcons ectetur adipi elit."]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Daily Offers"]</h5>
                        <p class="card-text">@Localizer["Amet consectetur adipi elit loreme ipsum dolor sit."]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Secure Payment"]</h5>
                        <p class="card-text">@Localizer["Rem Lopsum dolor sit amet, consectetur adipi elit."]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="mobile-products" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@Localizer["Mobile Products"]</h2>
            <a href="shop.html" class="btn btn-outline-dark">@Localizer["Go to Shop"]</a>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("Display", "Product", new { id = item.Id })">@item.Name</a>
                            </h5>
                            <p class="card-text">@item.Price.ToString("#,##0") VND</p>

                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id"
                               asp-route-quantity="@numOfQuantity">
                                <button class="btn btn-outline-dark"><i class="bi-cart-fill me-1">@Localizer["Add to cart"]</i></button>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3>@Localizer["10% off"]</h3>
                <h2 class="display-4 fw-bold">@Localizer["New Year Sale"]</h2>
                <a asp-controller="Product" asp-action="Index" class="btn btn-dark mt-3">@Localizer["Shop Sale"]</a>
            </div>
            <div class="col-md-6">
                <img src="~/images/46116_laptop_lenovo_v15_g3_iap_82tt005svn____2_.jpg" alt="sale" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@Localizer["Latest Posts"]</h2>
            <a href="blog.html" class="btn btn-outline-dark">@Localizer["Read Blog"]</a>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100">
                    <img src="images/post-item1.jpg" class="card-img-top" alt="post">
                    <div class="card-body">
                        <p class="text-muted">Feb 22, 2023 - Gadgets</p>
                        <h5 class="card-title">
                            <a href="#">@Localizer["Get some cool gadgets in 2023"]</a>
                        </h5>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="images/post-item2.jpg" class="card-img-top" alt="post">
                    <div class="card-body">
                        <p class="text-muted">Feb 25, 2023 - Technology</p>
                        <h5 class="card-title">
                            <a href="#">@Localizer["Technology Hack You Won't Get"]</a>
                        </h5>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <img src="images/post-item3.jpg" class="card-img-top" alt="post">
                    <div class="card-body">
                        <p class="text-muted">Feb 22, 2023 - Camera</p>
                        <h5 class="card-title">
                            <a href="#">@Localizer["Top 10 Small Camera In The World"]</a>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-dark text-white py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <h2>@Localizer["Subscribe Us Now"]</h2>
                <p>@Localizer["Get latest news, updates and deals directly mailed to your inbox."]</p>
                <form class="d-flex mt-3">
                    <input type="email" class="form-control me-2" placeholder="@Localizer["Your email address"]">
                    <button type="submit" class="btn btn-primary">@Localizer["Subscribe"]</button>
                </form>
            </div>
        </div>
    </div>
</section>
