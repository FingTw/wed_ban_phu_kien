@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["title"] = "Home Page";
    int numOfQuantity = 1;
}

@model IEnumerable<WebBanPhuKienDienThoai.Models.Product>

@section Scripts {
    <script>
        
        
    </script>
}

<style>
    .fa-star.checked {
        color: orange;
    }
</style>

<section class="bg-light py-5">
    <div class="container img-hover-zoom">
        <div class="row align-items-center">
            <div class="col-md-12 banner-container">
                <img src="~/images/banner.jpg" alt="banner" class="banner-image ">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold">@Localizer["Products"]</h1>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-dark mt-3">@Localizer["Shop Product"]</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Free Delivery"]</h5>
                        <p class="card-text">@Localizer["Free Delivery Description"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Quality Guarantee"]</h5>
                        <p class="card-text">@Localizer["Quality Guarantee Description"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Daily Offers"]</h5>
                        <p class="card-text">@Localizer["Daily Offers Description"]</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["Secure Payment"]</h5>
                        <p class="card-text">@Localizer["Secure Payment Description"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="mobile-products" class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@Localizer["Mobile Products"]</h2>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark">@Localizer["Go to Shop"]</a>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var item in Model.Take(4))
            {
                <div class="col">
                    <div class="card h-100">
                        <a asp-controller="Product" asp-action="Display" asp-route-id="@item.Id">
                            <img src="@item.ImageUrl" class="card-img-top img-hover-zoom" alt="@item.Name">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("Display", "Product", new { id = item.Id })">@item.Name</a>
                            </h5>
                            <p class="card-text">@item.Price.ToString("#,##0") VND</p>
                            <div>
                                @* @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="fa fa-star @(i <= item.Ratings.Average(r => r.Stars) ? "checked" : "")"></span>
                                } *@
                                <span>@item.Ratings.Count() ratings</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <a asp-controller="ShoppingCart" asp-action="AddToCart" class="btn btn-dark add-to-cart-btn-global px-4" data-product-id="@item.Id">Add to Cart</a>
                                <a class="compare btn btn-primary " data-productid="@item.Id" data-name="@item.Name" data-image="@item.ImageUrl">
                                    +
                                </a>
                                <a asp-controller="Product" asp-action="Display" asp-route-id="@item.Id" class="btn btn-outline-primary me-2">
                                     View
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
        <div id="compare-section" class="mt-4 d-flex align-items-center flex-wrap gap-3"></div>
    </div>
</section>

<section id="yearly-sale" class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3>@Localizer["10% off"]</h3>
                <h2 class="display-4 fw-bold">@Localizer["New Year Sale"]</h2>
                <a asp-controller="Product" asp-action="Index" class="btn btn-dark mt-3">@Localizer["Shop Sale"]</a>
            </div>
            <div class="col-md-6">
                <img src="~/images/46116_laptop_lenovo_v15_g3_iap_82tt005svn____2_.jpg" alt="sale" class="img-fluid">
            </div>
        </div>
    </div>
</section>

