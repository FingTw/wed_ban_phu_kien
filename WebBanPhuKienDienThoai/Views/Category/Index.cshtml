@model IEnumerable<WebBanPhuKienDienThoai.Models.Category>

<div class="container mt-4">
    <h2 class="mb-3">Danh sách danh mục</h2>
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>
                        <a asp-action="ProductsByCategory" asp-route-id="@category.Id">@category.Name</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>