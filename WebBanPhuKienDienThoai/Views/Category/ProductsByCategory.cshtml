@model IEnumerable<WebBanPhuKienDienThoai.Models.Product>

<div class="container mt-4">
    <h2 class="mb-3">Sản phẩm trong danh mục: @ViewBag.CategoryName</h2>
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><img src="@product.ImageUrl" alt="@product.Name" width="50" /></td>
                    <td class="text-center">
                        <a asp-action="Display" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-info btn-sm">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>