@model IEnumerable<WebBanPhuKienDienThoai.Models.Product>

<div class="mb-4">
    <form method="get" asp-action="ProductsByCategory">
        <input type="hidden" name="id" value="@ViewBag.CategoryId" />
        <div class="input-group d-flex align-items-center">
            <label for="priceFilter" class="me-2">Giá tối đa:</label>
            <input type="range" name="priceFilter" id="priceFilter" class="form-range me-3"
                   min="0" max="10000" step="10"
                   value="@ViewData["CurrentFilter"] ?? 0"
                   oninput="document.getElementById('rangeValue').textContent = this.value + ' $'" />

            <span id="rangeValue" class="fw-bold">
                @(ViewData["CurrentFilter"] ?? "0") $
            </span>

            <button type="submit" class="btn btn-primary ms-3">Tìm kiếm</button>
        </div>
    </form>
</div>

<div class="container mt-4">
    <h2 class="mb-3">Sản phẩm trong danh mục: @ViewBag.CategoryName</h2>
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><img src="@product.ImageUrl" alt="@product.Name" width="50" /></td>
                    <td class="text-center">
                        <a asp-action="Display" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-info btn-sm">Xem</a>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
