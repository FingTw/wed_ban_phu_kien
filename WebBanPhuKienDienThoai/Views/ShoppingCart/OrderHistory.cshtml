@model IEnumerable<WebBanPhuKienDienThoai.Models.Order>

<h2>Lịch sử mua hàng</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID Đơn hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalPrice.ToString("#,##0") VNĐ</td>
                <td>
                    <a asp-action="Details" asp-controller="Order" asp-area="Admin" asp-route-id="@order.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <form asp-action="AddFromOrder" method="post" style="display:inline;">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Thêm vào giỏ</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>