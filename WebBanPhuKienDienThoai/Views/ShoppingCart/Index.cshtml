
@model ShoppingCart

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.quantity-input').on('change', function () {
                var productId = $(this).data('productid');
                var quantity = $(this).val();
                updateCart(productId, quantity);
            });

            $('.quantity-increase').on('click', function () {
                var input = $(this).siblings('.quantity-input');
                var quantity = parseInt(input.val()) + 1;
                input.val(quantity).trigger('change');
            });

            $('.quantity-decrease').on('click', function () {
                var input = $(this).siblings('.quantity-input');
                var quantity = parseInt(input.val()) - 1;
                if (quantity > 0) {
                    input.val(quantity).trigger('change');
                }
            });

            $('.remove-item').on('click', function (e) {
                e.preventDefault();
                var productId = $(this).data('productid');
                removeFromCart(productId);
            });

            $('#clear-cart').on('click', function (e) {
                e.preventDefault();
                clearCart();
            });

            function updateCart(productId, quantity) {
                $.ajax({
                    url: '@Url.Action("UpdateCart", "ShoppingCart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: quantity
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (response) {
                        alert('An error occurred. Please try again.');
                    }
                });
            }

            function removeFromCart(productId) {
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "ShoppingCart")',
                    type: 'POST',
                    data: {
                        productId: productId
                    },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('An error occurred. Please try again.');
                        }
                    },
                    error: function (response) {
                        alert('An error occurred. Please try again.');
                    }
                });
            }

            function clearCart() {
                $.ajax({
                    url: '@Url.Action("ClearCart", "ShoppingCart")',
                    type: 'POST',
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('An error occurred. Please try again.');
                        }
                    },
                    error: function (response) {
                        alert('An error occurred. Please try again.');
                    }
                });
            }
        });
    </script>
}

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <h2 class="fw-bold mb-4 text-center">Your Shopping Cart</h2>

        @if (Model.Items == null || !Model.Items.Any())
        {
            <div class="alert alert-info text-center">
                Your cart is empty. <a asp-controller="Home" asp-action="Index" class="alert-link">Continue shopping</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col">Total</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <div class="input-group">
                                        <input type="number" class="form-control quantity-input" style="width: 15px; text-align: center;" data-productid="@item.ProductId" value="@item.Quantity" min="1" />
                                    </div>
                                </td>
                                <td>@item.Price.ToString("#,##0") $</td>
                                <td>@((item.Price * item.Quantity).ToString("#,##0")) $</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-danger me-2 remove-item" data-productid="@item.ProductId">
                                        <i class="bi bi-trash"></i> Remove
                                    </a>
                                    <a asp-controller="ShoppingCart" asp-action="Checkout" asp-route-productId="@item.ProductId"
                                       class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-check2"></i> Checkout
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3" class="text-end">Grand Total:</td>
                            <td>@Model.Items.Sum(item => item.Price * item.Quantity).ToString("#,##0") $</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Continue Shopping
                </a>
                <a href="#" id="clear-cart" class="btn btn-danger">
                    Clear Cart
                </a>
                <a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-primary">
                    Proceed to Checkout <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        }
    </div>
</section>
