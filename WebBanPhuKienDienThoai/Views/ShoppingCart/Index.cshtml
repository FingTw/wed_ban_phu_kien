@model WebBanPhuKienDienThoai.Models.ShoppingCart

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý thay đổi số lượng
            $('.quantity-input').on('change', function () {
                var productId = $(this).data('productid');
                var quantity = $(this).val();
                updateCart(productId, quantity);
            });

            // Tăng số lượng
            $('.quantity-increase').on('click', function () {
                var input = $(this).siblings('.quantity-input');
                var quantity = parseInt(input.val()) + 1;
                input.val(quantity).trigger('change');
            });

            // Giảm số lượng
            $('.quantity-decrease').on('click', function () {
                var input = $(this).siblings('.quantity-input');
                var quantity = parseInt(input.val()) - 1;
                if (quantity > 0) input.val(quantity).trigger('change');
            });

            // Xóa sản phẩm
            $('.remove-item').on('click', function (e) {
                e.preventDefault();
                var productId = $(this).data('productid');
                removeFromCart(productId);
            });

            // Xóa giỏ hàng
            $('#clear-cart').on('click', function (e) {
                e.preventDefault();
                clearCart();
            });

            // Áp dụng mã giảm giá
            $('#applyDiscountBtn').click(function() {
                const code = $('#discountCodeInput').val().trim();
                if (!code) {
                    showDiscountMessage('Vui lòng nhập mã giảm giá', 'warning');
                    return;
                }
                applyDiscount(code);
            });

            // Xóa mã giảm giá
            $('#removeDiscountBtn').click(function() {
                removeDiscount();
            });

            // Hàm áp dụng mã giảm giá
            function applyDiscount(code) {
                $.post('/ShoppingCart/ApplyDiscount', { discountCode: code })
                    .done(function(data) {
                        if (data.success) {
                            location.reload();
                        } else {
                            showDiscountMessage(data.message, 'danger');
                        }
                    })
                    .fail(function() {
                        showDiscountMessage('Lỗi khi áp dụng mã', 'danger');
                    });
            }

            // Hàm xóa mã giảm giá
            function removeDiscount() {
                $.post('/ShoppingCart/RemoveDiscount')
                    .done(function(data) {
                        if (data.success) {
                            location.reload();
                        }
                    });
            }

            // Hiển thị thông báo
            function showDiscountMessage(message, type) {
                $('#discountMessage').html(`
                    <div class="alert alert-${type} alert-dismissible fade show">
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `);
            }

            // Các hàm cập nhật giỏ hàng
            function updateCart(productId, quantity) {
                $.post('/ShoppingCart/UpdateCart', { productId: productId, quantity: quantity })
                    .done(function(response) {
                        if (response.success) location.reload();
                        else alert(response.message);
                    })
                    .fail(function() {
                        alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    });
            }

            function removeFromCart(productId) {
                $.post('/ShoppingCart/RemoveFromCart', { productId: productId })
                    .done(function(response) {
                        if (response.success) location.reload();
                        else alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    });
            }

            function clearCart() {
                $.post('/ShoppingCart/ClearCart')
                    .done(function(response) {
                        if (response.success) location.reload();
                    });
            }
        });
    </script>
}

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <h2 class="fw-bold mb-4 text-center">Giỏ hàng của bạn</h2>

        @if (Model.Items == null || !Model.Items.Any())
        {
            <div class="alert alert-info text-center">
                Giỏ hàng của bạn đang trống. <a asp-controller="Home" asp-action="Index" class="alert-link">Tiếp tục mua sắm</a>.
            </div>
        }
        else
        {
            <div class="mt-3 mb-4">
                <h5>Mã giảm giá</h5>
                <div class="input-group">
                    <input type="text" id="discountCodeInput" class="form-control"
                           placeholder="Nhập mã giảm giá"
                           value="@Context.Session.GetString("DiscountCode")" />

                    @if (Context.Session.GetString("DiscountCode") != null)
                    {
                        <button type="button" id="removeDiscountBtn" class="btn btn-outline-danger">
                            <i class="bi bi-x-circle"></i> Xóa
                        </button>
                    }
                    else
                    {
                        <button type="button" id="applyDiscountBtn" class="btn btn-outline-primary">
                            <i class="bi bi-check-circle"></i> Áp dụng
                        </button>
                    }
                </div>
                <div id="discountMessage" class="mt-2">
                    @if (Context.Session.GetString("DiscountCode") != null)
                    {
                        <div class="alert alert-success">
                            Đã áp dụng mã: @Context.Session.GetString("DiscountCode")
                        </div>
                    }
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Tổng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model?.Items ?? new List<CartItem>())
                        {
                            <tr>
                                <td>
                                    @if (item.Product?.ImageUrl != null)
                                    {
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="~/images/default-product.png" alt="No image" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="input-group w-50">
                                        <button class="btn btn-outline-secondary quantity-decrease" type="button">-</button>
                                        <input type="number" class="form-control quantity-input text-center"
                                               data-productid="@item.ProductId" value="@item.Quantity" min="1" />
                                        <button class="btn btn-outline-secondary quantity-increase" type="button">+</button>
                                    </div>
                                </td>
                                <td>@item.Price.ToString("#,##0") VNĐ</td>
                                <td>@((item.Price * item.Quantity).ToString("#,##0")) VNĐ</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-danger me-2 remove-item" data-productid="@item.ProductId">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end">Tổng tiền sản phẩm:</td>
                            <td>@Model.Items.Sum(i => i.Price * i.Quantity).ToString("#,##0") VNĐ</td>
                        </tr>
                        @{
                            var discountAmount = Context.Session.GetString("DiscountAmount") != null ?
                            decimal.Parse(Context.Session.GetString("DiscountAmount")) : 0;
                            var totalPrice = Model.GetTotalPrice() - discountAmount;
                        }
                        @if (discountAmount > 0)
                        {
                            <tr class="text-success">
                                <td colspan="4" class="text-end">
                                    <strong>Giảm giá:</strong>
                                </td>
                                <td><strong>-@discountAmount.ToString("#,##0") VNĐ</strong></td>
                            </tr>
                        }
                        <tr class="fw-bold table-primary">
                            <td colspan="4" class="text-end">Tổng thanh toán:</td>
                            <td class="text-danger fs-5">@totalPrice.ToString("#,##0") VNĐ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 text-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                    <a href="#" id="clear-cart" class="btn btn-danger me-2">
                        Xóa giỏ hàng
                    </a>
                    <a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-primary">
                        Thanh toán <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</section>