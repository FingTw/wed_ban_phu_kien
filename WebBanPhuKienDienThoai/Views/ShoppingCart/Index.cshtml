@model WebBanPhuKienDienThoai.Models.ShoppingCart

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.quantity-input').on('change', function () {
                var productId = $(this).data('productid');
                var quantity = $(this).val();
                updateCart(productId, quantity);
            });

            $('.quantity-increase').on('click', function () {
                var input = $(this).siblings('.quantity-input');
                var quantity = parseInt(input.val()) + 1;
                input.val(quantity).trigger('change');
            });

            $('.quantity-decrease').on('click', function () {
                var input = $(this).siblings('.quantity-input');
                var quantity = parseInt(input.val()) - 1;
                if (quantity > 0) input.val(quantity).trigger('change');
            });

            $('.remove-item').on('click', function (e) {
                e.preventDefault();
                var productId = $(this).data('productid');
                removeFromCart(productId);
            });

            $('#clear-cart').on('click', function (e) {
                e.preventDefault();
                clearCart();
            });

            $('#apply-discount').on('click', function (e) {
                e.preventDefault();
                var discountCode = $('#discountCode').val();
                $.ajax({
                    url: '@Url.Action("ApplyDiscount", "ShoppingCart")',
                    type: 'POST',
                    data: { discountCode: discountCode },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            $('#discount-message').html('<div class="alert alert-danger mt-2">' + response.message + '</div>');
                        }
                    },
                    error: function () {
                        $('#discount-message').html('<div class="alert alert-danger mt-2">Đã xảy ra lỗi khi áp dụng mã giảm giá.</div>');
                    }
                });
            });

            function updateCart(productId, quantity) {
                $.ajax({
                    url: '@Url.Action("UpdateCart", "ShoppingCart")',
                    type: 'POST',
                    data: { productId: productId, quantity: quantity },
                    success: function (response) {
                        if (response.success) location.reload();
                        else alert(response.message);
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    }
                });
            }

            function removeFromCart(productId) {
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "ShoppingCart")',
                    type: 'POST',
                    data: { productId: productId },
                    success: function (response) {
                        if (response.success) location.reload();
                        else alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    }
                });
            }

            function clearCart() {
                $.ajax({
                    url: '@Url.Action("ClearCart", "ShoppingCart")',
                    type: 'POST',
                    success: function (response) {
                        if (response.success) location.reload();
                        else alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi. Vui lòng thử lại.');
                    }
                });
            }
        });
    </script>
}

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <h2 class="fw-bold mb-4 text-center">Giỏ hàng của bạn</h2>

        @if (Model.Items == null || !Model.Items.Any())
        {
            <div class="alert alert-info text-center">
                Giỏ hàng của bạn đang trống. <a asp-controller="Home" asp-action="Index" class="alert-link">Tiếp tục mua sắm</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <div class="input-group">
                        <input type="text" id="discountCode" class="form-control" placeholder="Nhập mã giảm giá" />
                        <button id="apply-discount" class="btn btn-outline-danger">Áp dụng</button>
                    </div>
                    <thead class="table-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Tổng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <div class="col-md-6">
                                
                                <div id="discount-message" class="mt-2">
                                    @if (TempData["DiscountSuccess"] != null)
                                    {
                                        <div class="alert alert-success">@TempData["DiscountSuccess"]</div>
                                    }
                                    @if (TempData["DiscountError"] != null)
                                    {
                                        <div class="alert alert-danger">@TempData["DiscountError"]</div>
                                    }
                                </div>
                            </div>
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <div class="input-group w-50">
                                        <button class="btn btn-outline-secondary quantity-decrease" type="button">-</button>
                                        <input type="number" class="form-control quantity-input text-center" data-productid="@item.ProductId" value="@item.Quantity" min="1" />
                                        <button class="btn btn-outline-secondary quantity-increase" type="button">+</button>
                                    </div>
                                </td>
                                <td>@item.Price.ToString("#,##0") VNĐ</td>
                                <td>@((item.Price * item.Quantity).ToString("#,##0")) VNĐ</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-danger me-2 remove-item" data-productid="@item.ProductId">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        @{
                            var totalPrice = Model.Items.Sum(item => item.Price * item.Quantity);
                            var discount = TempData["DiscountAmount"] != null ? (decimal)TempData["DiscountAmount"] : 0;
                            var finalPrice = totalPrice - discount;
                            TempData.Keep("DiscountAmount"); // Giữ giá trị giảm giá
                        }
                        <tr>
                            <td colspan="3" class="text-end">Tổng tiền sản phẩm:</td>
                            <td>@totalPrice.ToString("#,##0") VNĐ</td>
                            <td></td>
                        </tr>
                        @if (discount > 0)
                        {
                            <tr>
                                <td colspan="3" class="text-end">Số tiền đã giảm:</td>
                                <td>@discount.ToString("#,##0") VNĐ</td>
                                <td></td>
                            </tr>
                            <tr class="fw-bold">
                                <td colspan="3" class="text-end">Tổng tiền:</td>
                                <td>@finalPrice.ToString("#,##0") VNĐ</td>
                                <td></td>
                            </tr>
                        }
                    </tfoot>
                </table>
            </div>

            <div class="row mt-4">

                <div class="col-md-6 text-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                    <a href="#" id="clear-cart" class="btn btn-danger me-2">
                        Xóa giỏ hàng
                    </a>
                    <a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-primary">
                        Thanh toán <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</section>