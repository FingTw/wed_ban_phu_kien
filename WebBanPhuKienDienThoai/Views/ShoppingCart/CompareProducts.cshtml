@model IEnumerable<WebBanPhuKienDienThoai.Models.Product>

<section class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">So sánh sản phẩm</h2>
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center">
                Không có sản phẩm nào để so sánh. <a asp-controller="Home" asp-action="Index" class="alert-link">Quay lại trang chủ</a>.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Mô tả</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td><img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px;" /></td>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("#,##0") VNĐ</td>
                                <td>@(product.Description ?? "Không có thông tin")</td>
                                <td>
                                    <a href="@Url.Action("AddToCart", "ShoppingCart", new { productId = product.Id, quantity = 1 })"
                                       class="btn btn-dark btn-sm add-to-cart-btn-global">Mua ngay</a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>