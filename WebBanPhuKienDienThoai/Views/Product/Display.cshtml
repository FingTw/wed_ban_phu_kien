@model WebBanPhuKienDienThoai.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<style>
    .product-detail-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
        margin-top: 30px;
        padding: 20px;
    }
    .product-detail-img {
        max-width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 5px;
    }
    .product-detail-info {
        padding-left: 20px;
    }
    .product-detail-label {
        font-weight: 600;
    }
    .product-detail-title {
        margin-bottom: 15px;
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
    }
    .product-detail-background {
        background: #f9f9f9;
        padding: 30px 0;
    }
</style>

<div class="container product-detail-background">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="product-detail-card row">
                <div class="col-md-4 text-center">
                    <img class="product-detail-img" src="@Model.ImageUrl" alt="@Model.Name" />
                </div>
                <div class="col-md-8 product-detail-info">
                    <h2 class="product-detail-title">@Model.Name</h2>
                    
                    <p><span class="product-detail-label">Giá:</span> @Model.Price.ToString("C")</p>
                    <p><span class="product-detail-label">Mô tả:</span> @Model.Description</p>
                    <p><span class="product-detail-label">Danh mục:</span> @(Model.Category?.Name)</p>

                    <div class="mt-4">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Product")">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
