@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 shadow-lg p-5 rounded bg-white">
                <div class="row">
                    <!-- Left: Local Login -->
                    <div class="col-md-6 border-end pe-4">
                        <h2 class="mb-4 text-primary">Welcome Back</h2>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div class="d-grid mb-3">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                            </div>

                            <div class="text-center">
                                <p class="mb-1">
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-secondary">Forgot your password?</a>
                                </p>
                                <p class="mb-1">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-secondary">Register as a new user</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-secondary">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <!-- Right: External Login -->
                    <div class="col-md-6 ps-4">
                        <h3 class="mb-4 text-primary">Social Login</h3>
                        <hr />
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="alert alert-warning">
                                    There are no external authentication services configured.
                                    See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank" class="link-primary">
                                        article
                                    </a> about setting up external logins.
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <div class="d-grid mb-2">
                                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                                Log in with @provider.DisplayName
                                            </button>
                                        </div>
                                    }
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
