@model IEnumerable<WebBanPhuKienDienThoai.Models.Category>

<div class="container mt-4">
    <h2 class="mb-3">Danh sách danh mục</h2>
    <a asp-area="Admin" asp-action="Add" class="btn btn-success mb-3">+ Thêm danh mục</a>
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>
                        <a asp-action="ProductsByCategory" asp-route-id="@category.Id">@category.Name</a>
                    </td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>