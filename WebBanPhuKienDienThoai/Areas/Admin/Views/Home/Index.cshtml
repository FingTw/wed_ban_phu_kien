@{
}
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Admin Dashboard</h2>
<p>Welcome to the admin panel! Use the sidebar to manage Categories, Device Types, and Products.</p>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <p class="card-text">Manage product categories.</p>
                <a asp-controller="CategoryA" asp-action="Index" class="btn btn-primary">Go to Categories</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Device Types</h5>
                <p class="card-text">Manage device types.</p>
                <a asp-controller="DeviceTypeA" asp-action="Index" class="btn btn-primary">Go to Device Types</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">Manage products.</p>
                <a asp-controller="ProductA" asp-action="Index" class="btn btn-primary">Go to Products</a>
            </div>
        </div>
    </div>
</div>