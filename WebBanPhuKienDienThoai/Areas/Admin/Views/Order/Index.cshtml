@model IEnumerable<WebBanPhuKienDienThoai.Models.Order>
<h2>Order Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Shipping Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ApplicationUser?.UserName</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalPrice.ToString("#,##0") VNĐ</td>
                <td>@order.ShippingAddress</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-info btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>