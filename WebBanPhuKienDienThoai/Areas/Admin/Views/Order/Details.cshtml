@model WebBanPhuKienDienThoai.Models.Order

<div class="container py-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Chi tiết đơn hàng #@Model.Id</h3>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil"></i> Chỉnh sửa
                </a>
                <a asp-action="ExportInvoice" asp-route-id="@Model.Id" class="btn btn-outline-success" target="_blank">
                    <i class="bi bi-file-earmark-pdf"></i> Xuất hóa đơn
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2">Thông tin đơn hàng</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th style="width: 150px;">Mã đơn hàng:</th>
                            <td><strong>@Model.Id</strong></td>
                        </tr>
                        <tr>
                            <th>Khách hàng:</th>
                            <td>@(Model.User?.UserName ?? "Không có thông tin")</td>
                        </tr>
                        <tr>
                            <th>Ngày đặt:</th>
                            <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Tổng tiền:</th>
                            <td class="text-danger fw-bold">@Model.TotalPrice.ToString("#,##0") VNĐ</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="border-bottom pb-2">Thông tin giao hàng</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th style="width: 150px;">Địa chỉ:</th>
                            <td>@Model.ShippingAddress</td>
                        </tr>
                        <tr>
                            <th>Ghi chú:</th>
                            <td>@(string.IsNullOrEmpty(Model.Notes) ? "Không có ghi chú" : Model.Notes)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <h5 class="border-bottom pb-2 mt-4">Chi tiết sản phẩm</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th> Hình ảnh</th>
                            <th>Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                            var totalPriceBeforeDiscount = Model.OrderDetails.Sum(d => d.Price * d.Quantity);
                            var discountAmount = totalPriceBeforeDiscount - Model.TotalPrice;
                        }

                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@(index++)</td>
                                <td>
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>@(item.Product?.Name)</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.Price.ToString("#,##0") VNĐ</td>
                                <td class="text-end">@((item.Price * item.Quantity).ToString("#,##0")) VNĐ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end">Tổng tiền sản phẩm:</td>
                            <td class="text-end">@totalPriceBeforeDiscount.ToString("#,##0") VNĐ</td>
                        </tr>
                        @if (discountAmount > 0)
                        {
                            <tr>
                                <td colspan="4" class="text-end">Giảm giá:</td>
                                <td class="text-end">@discountAmount.ToString("#,##0") VNĐ</td>
                            </tr>
                        }
                        <tr class="fw-bold">
                            <td colspan="4" class="text-end">Tổng thanh toán:</td>
                            <td class="text-end text-danger">@Model.TotalPrice.ToString("#,##0") VNĐ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>