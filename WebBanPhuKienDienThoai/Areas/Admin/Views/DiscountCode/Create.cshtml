@model WebBanPhuKienDienThoai.Models.DiscountCode

<h2>Thêm mã giảm giá</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Giảm theo tiền (VNĐ)</label>
        <input asp-for="DiscountAmount" class="form-control" />
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giảm theo phần trăm (%)</label>
        <input asp-for="DiscountPercent" class="form-control" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hạn sử dụng</label>
        <input asp-for="ExpiryDate" type="date" class="form-control" required />
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Số lần sử dụng tối đa</label>
        <input asp-for="UsageLimit" type="number" class="form-control" min="1" value="1" required />
        <span asp-validation-for="UsageLimit" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Tạo mã</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
