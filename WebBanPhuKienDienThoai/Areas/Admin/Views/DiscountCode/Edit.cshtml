@model WebBanPhuKienDienThoai.Models.DiscountCode

<h2>Sửa mã giảm giá</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Mã giảm giá</label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Giảm theo tiền (VNĐ)</label>
        <input asp-for="DiscountAmount" class="form-control" />
        <span asp-validation-for="DiscountAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giảm theo phần trăm (%)</label>
        <input asp-for="DiscountPercent" class="form-control" />
        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hạn sử dụng</label>
        <input asp-for="ExpiryDate" type="date" class="form-control" required />
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Số lần sử dụng tối đa</label>
        <input asp-for="UsageLimit" type="number" class="form-control" min="1" required />
        <span asp-validation-for="UsageLimit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Số lần đã dùng</label>
        <input asp-for="UsageCount" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-success mt-2">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}