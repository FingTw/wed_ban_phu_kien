@model WebBanPhuKienDienThoai.Models.DiscountCode

<h2>Xóa mã giảm giá</h2>
<h4>Bạn có chắc muốn xóa mã giảm giá này?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Mã</dt>
        <dd class="col-sm-10">@Model.Code</dd>
        <dt class="col-sm-2">Giảm tiền (VNĐ)</dt>
        <dd class="col-sm-10">@Model.DiscountAmount?.ToString("N0")</dd>
        <dt class="col-sm-2">Giảm %</dt>
        <dd class="col-sm-10">@Model.DiscountPercent</dd>
        <dt class="col-sm-2">Hạn sử dụng</dt>
        <dd class="col-sm-10">@Model.ExpiryDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Số lần đã dùng</dt>
        <dd class="col-sm-10">@Model.UsageCount</dd>
        <dt class="col-sm-2">Số lần tối đa</dt>
        <dd class="col-sm-10">@Model.UsageLimit</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>