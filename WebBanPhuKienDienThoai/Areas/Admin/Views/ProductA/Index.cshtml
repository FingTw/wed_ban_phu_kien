@model IEnumerable<WebBanPhuKienDienThoai.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2 class="mb-4">Danh Sách Sản Phẩm</h2>
<a asp-area="Admin" class="btn btn-sm btn-primary mb-3" asp-action="Add">Add</a>

<!-- Bảng hiển thị sản phẩm -->
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Device Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        <img src="@product.ImageUrl" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                    </td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Description</td>
                    <td>@(product.Category?.Name ?? "N/A")</td>
                    <td>@(product.DeviceType?.Name ?? "N/A")</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-area="Admin" asp-action="Display" asp-route-id="@product.Id">View</a>
                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-action="Update" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- CSS tối giản cho bảng -->
<style>
    .table-responsive {
        margin: 0 auto;
        max-width: 1400px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: left;
    }

    .table th {
        background-color: #f8f9fa;
    }

    .table img {
        border-radius: 4px;
    }
</style>