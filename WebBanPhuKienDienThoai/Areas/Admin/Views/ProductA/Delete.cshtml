@model WebBanPhuKienDienThoai.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="mb-4 text-center">Delete Product</h2>

<div class="container">
    <div class="form-container mx-auto p-4 shadow-sm rounded bg-white">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <p class="fs-5 text-center">Are you sure you want to delete <strong>@Model.Name</strong>?</p>
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index", "ProductA", new { area = "Admin" })" class="btn btn-secondary">Return</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-container {
        max-width: 600px;
    }
</style>